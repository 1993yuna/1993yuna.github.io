<!-- Start Slider Area -->
<div class="custop__container--2 bg__white" style="padding-bottom: {{ section.settings.section_padding_bottom }}px">
  <div class="masonry-product">
    <div class="{% if settings.wrapper_handle == 'wrapper_box' or settings.wrapper_handle == 'wrapper_box_2' or settings.header_style == 'header_three' %}container-fluid{% else %}container{% endif %}">
      <!-- Start Product MEnu -->
      <div class="htc__product__container">
        <!-- End Product MEnu -->
        <div class="row">     
          <div class="product__list clearfix masonry-poduct-list">
            {% assign masonry_product = collections[section.settings.masonry_product_handle] %}

            {% for product in masonry_product.products limit: 1 %}
            <div class="col-md-6 col-sm-6 col-xs-12">
              {% if section.settings.scroll_effect == 'fade_in' %}
              {% include 'product-grid-item-3' %}
              {% endif %}

              {% if section.settings.scroll_effect == 'normal' %}
              {% include 'product-grid-item-4' %}
              {% endif %}
            </div>
            {% endfor %}
