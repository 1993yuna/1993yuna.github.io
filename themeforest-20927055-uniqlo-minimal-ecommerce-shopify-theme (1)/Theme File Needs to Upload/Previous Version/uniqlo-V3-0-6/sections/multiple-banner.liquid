			"settings": [
				{
                  "type": "text",
                  "id": "banner_column",
                  "label": "Banner Column",
                  "default": "6"
                },
				{
                  "type": "image_picker",
                  "id": "banner_image",
                  "label": "Banner Image",
				  "info": "Recommended Size: 570 x 290px"
                },
				{
                  "type": "checkbox",
                  "id": "banner_content",
                  "label": "Show Content",
                  "default": true
                },
                {
                  "type": "text",
                  "id": "banner_title",
                  "label": "Title",
                  "default": "Title"
                },
                {
                  "type": "text",
                  "id": "banner_button_name",
                  "label": "Button Name",
                  "default": "Shop Now"
                },
                {
                  "type": "url",
                  "id": "banner_url",
                  "label": "Link"
                }
			]
		}
	],
	"presets": [
		{
			"name": "Multiple Banner",
			"category": "banner",
			"blocks": [
				{
					"type": "mulitple_banner"
				},
				{
					"type": "mulitple_banner"
				}
			]
		}
	]
  }
