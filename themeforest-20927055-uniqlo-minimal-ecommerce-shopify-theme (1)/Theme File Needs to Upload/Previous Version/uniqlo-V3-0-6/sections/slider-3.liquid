<!-- Start Slider Area -->
<div class="slider__container slider--four" style="padding-bottom: {{ section.settings.section_padding_bottom }}px;">
  <div class="slider__activation__wrap owl-carousel owl-theme">
    <!-- Start Single Slide -->
    {% assign i = 1 %}
    {% for block in section.blocks %}
    <div class="slide slider__fixed--height slider__bg--{{ i }}">
      <div class="container">
        <div class="row">
          <div class="col-md-7 col-lg-6 {% if block.settings.slider_position == 'slider_right' %}col-lg-offset-6 col-md-offset-5 col-sm-10 col-sm-offset-2{% endif %} col-xs-12">
            <div class="slider__content">
              <div class="slider__inner">
                {% if block.settings.slider_title != '' %}
                <h1>{{ block.settings.slider_title }}</h1>
                {% endif %}
                {% if block.settings.slider_sub_title != '' %}
                <h4>{{ block.settings.slider_sub_title }}</h4>
                {% endif %}
                {% if block.settings.slider_botton != '' %}
                <div class="slider__btn">
                  <a class="htc__btn" href="{{ block.settings.slider_url }}">{{ block.settings.slider_botton }}</a>
                </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% assign i = i | plus: 1 %}
    {% endfor %}
    <!-- End Single Slide -->
  </div>
</div>
<!-- Start Slider Area -->

<style>
  {% assign i = 1 %}
  {% for block in section.blocks %}
  .slider--four .slider__bg--{{ i }} {
    {% if block.settings.slider_bg_image %}
    background: rgba(0, 0, 0, 0) url("{{ block.settings.slider_bg_image | img_url: 'master' }}") no-repeat scroll center center / cover ;
    {% else %}
    background: rgba(0, 0, 0, 0) url("https://via.placeholder.com/1800x678") no-repeat scroll center center / cover ;
    {% endif %}
  }
  {% assign i = i | plus: 1 %}
  {% endfor %}
</style>

{% schema %}
  {
    "name": "Full Width Slider",
    "settings": [
		{
			"type": "header",
            "content": "Section Padding"
        },
		{
          "type": "text",
          "id": "section_padding_bottom",
          "label": "Padding Bottom",
          "default": "130",
          "info": "Defined in pixels. Do not add the 'px' unit."	
      	}
	],
	"blocks":[
		{
			"type": "slide",
			"name": "Slide",
			"settings": [
				{
					"type": "image_picker",
					"id": "slider_bg_image",
					"label": "Image",
					"info": "Recommended Size: 1800 x 678px"
				},
				{
                  "type": "radio",
                  "id": "slider_position",
                  "label": "Content Position",
                  "options":[                        
                        {
                            "label": "Left",
                            "value": "slider_left"
                        },
						{
                            "label": "Right",
                            "value": "slider_right"
                        }
                    ],
                    "default": "slider_right"
                },
				{
					"type": "text",
					"id": "slider_title",
					"label": "Title",
					"default": "Slider Title"
				},
				{
					"type": "text",
					"id": "slider_sub_title",
					"label": "Sub Title",
					"default": "Sub Title"
				},
				{
					"type": "text",
					"id": "slider_botton",
					"label": "Button Name",
					"default": "Shop Now"
				},
				{
					"type": "url",
					"id": "slider_url",
					"label": "Link Here"
				}
			]
		}
	],
	"presets":[
		{
			"name": "Full Width Slider",
			"category": "slider",
			"blocks":[
				{
					"type": "slide"
				},
				{
					"type": "slide"
				}
			]
		}
	]
  }
{% endschema %}

