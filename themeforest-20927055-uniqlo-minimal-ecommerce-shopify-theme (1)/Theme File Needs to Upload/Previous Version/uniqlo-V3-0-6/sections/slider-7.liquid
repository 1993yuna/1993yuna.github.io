<!-- Start Slider Area -->
<div class="slider__container slider--one" style="padding-bottom: {{ section.settings.section_padding_bottom }}px;">
  <div class="slider__activation__wrap owl-carousel owl-theme">
    {% assign i = 1 %}
    {% for block in section.blocks %}
    <div class="slide {% if section.settings.slider_full_height_enable %}slider__full--screen{% else %}slider-with-description{% endif %} slider__bg--{{ i }}">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-lg-8 {% if block.settings.slider_position == 'slider_right' %}col-md-offset-2 col-lg-offset-4 text-right{% endif %} col-sm-12 col-xs-12">
            <div class="slider__inner"> 
              {% if block.settings.slider_title != '' %}
              <h1 class="{% if block.settings.slider_position == 'slider_right' %}text-right{% else %}text-left{% endif %}">
                {{ block.settings.slider_title }} 
                {% if block.settings.slider_title_highlight %}
                <span class="text--theme">{{ block.settings.slider_title_highlight }}</span>
                {% endif %}
              </h1>
              {% endif %} 
              {% if block.settings.slider_description != '' %}
              <p class="mt--12">{{ block.settings.slider_description }}</p>
              {% endif %}
              {% if block.settings.slider_botton != '' %}
              <div class="slider__btn {% if block.settings.slider_position == 'slider_right' %}text-right{% else %}text-left{% endif %}">
                <a class="htc__btn bold_text" href="{{ block.settings.slider_url }}">{{ block.settings.slider_botton }}</a>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    {% assign i = i | plus: 1 %}
    {% endfor %}
  </div>
</div>
<!-- Start Slider Area -->




<style>
  {% assign i = 1 %}
  {% for block in section.blocks %}
  .slider--one .slider__bg--{{ i }} {
    {% if block.settings.slider_img %}
    background: rgba(0, 0, 0, 0) url("{{ block.settings.slider_img | img_url: 'master' }}") no-repeat scroll center center / cover;
    {% else %}
    background: rgba(0, 0, 0, 0) url("https://via.placeholder.com/1920x800") no-repeat scroll center center / cover;
    {% endif %}
  }
  {% assign i = i | plus: 1 %}
  {% endfor %}
</style>




{% schema %}
  {
    "name": "Slider with Description",
    "settings": [
		{
          "type": "checkbox",
          "id": "slider_full_height_enable",
          "label": "Full Height Slide Enable",
          "default": true	
      	},
		{
			"type": "header",
            "content": "Section Padding"
        },
		{
          "type": "text",
          "id": "section_padding_bottom",
          "label": "Padding Bottom",
          "default": "130",
          "info": "Defined in pixels. Do not add the 'px' unit."	
      	}
	],
	"blocks":[
		{
			"type": "slide",
			"name": "Slide",
			"settings": [
				{
					"type": "image_picker",
					"id": "slider_img",
					"label": "Image",
					"info": "Recommended Size: 1920 x 800px"
				},
				{
                  "type": "radio",
                  "id": "slider_position",
                  "label": "Content Position",
                  "options":[                        
                        {
                            "label": "Left",
                            "value": "slider_left"
                        },
						{
                            "label": "Right",
                            "value": "slider_right"
                        }
                    ],
                    "default": "slider_right"
                },
				{
					"type": "text",
					"id": "slider_title",
					"label": "Title",
					"default": "Slider Title"
				},
				{
					"type": "text",
					"id": "slider_title_highlight",
					"label": "Hilight Title",
					"default": "Highlight Text",
					"info": "You may use '<br>' tag for line break"
				},
				{
					"type": "text",
					"id": "slider_description",
					"label": "Description",
					"default": "Lorem ipsum dolor sit amet consectetur adipiscing elit sed<br> do eiusmod tempor incididunt ut labore",
					"info": "Use '<br>' tag for line break"
				},
				{
					"type": "text",
					"id": "slider_botton",
					"label": "Button Name",
					"default": "Shop Now"
				},
				{
					"type": "url",
					"id": "slider_url",
					"label": "Link Here"
				}
			]
		}
	],
	"presets":[
		{
			"name": "Slider with Description",
			"category": "slider",
			"blocks":[
				{
					"type": "slide"
				},
				{
					"type": "slide"
				}
			]
		}
	]
  }
{% endschema %}

