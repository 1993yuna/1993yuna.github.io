<div class="our-reply-form-area mt--20">
  {% form 'new_comment', article %}

  {{ form.errors | default_errors }}
  <h2 class="section-title-2">{{ 'blogs.comments.title' | t }}</h2>
  <div class="reply-form-inner mt--40">
    <div class="reply-form-box">
      <div class="reply-form-box-inner">
        <div class="rfb-single-input">
          <input type="text" class="{% if form.errors contains 'author' %}error{% endif %}" name="comment[author]" id="commentAuthor" value="{{ form.author }}" placeholder="{{ 'blogs.comments.name' | t }}">
        </div>
        <div class="rfb-single-input">
          <input type="text" class="{% if form.errors contains 'email' %}error{% endif %}" name="comment[email]" id="commentEmail" value="{{ form.email }}" placeholder="{{ 'blogs.comments.email' | t }}">
        </div>
      </div>
    </div>
    <div class="reply-form-box">
      <textarea class="custom-textarea" name="comment[body]" id="commentBody"  placeholder="{{ 'blogs.comments.message' | t }}">{{ form.body }}</textarea>
    </div>
    <div class="blog__details__btn">
      <button type="submit" class="htc__btn btn--gray" href="#">{{ 'blogs.comments.post' | t }}</button>
    </div>
  </div>
  {% endform %}
</div>