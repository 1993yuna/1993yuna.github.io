{% if paginate.pages > 1 %}
<div class="page-pagination text-center col-xs-12 fix">
  <nav class="pagination">
    {% if settings.enable_rtl %}
    <ul class="">
      {% if paginate.previous %}
      <li>
        <a href="{{ paginate.previous.url }}" aria-label="Previous">
          <span aria-hidden="true"><i class="zmdi zmdi-chevron-right"></i></span>
        </a>
      </li>
      {% else %}
      <li class="disabled prev">
        <a href="">
          <span><i class="zmdi zmdi-chevron-right"></i></span>
        </a>
      </li>
      {% endif %}
      {% for part in paginate.parts %}
      {% if part.is_link %}
      <li>
        <a href="{{ part.url }}" title="">{{ part.title }}</a>
      </li>
      {% else %}
      {% if part.title == paginate.current_page %}
      <li class="active"><a href="">{{ part.title }}</a></li>
      {% else %}
      <li><a href="">{{ part.title }}</a></li>
      {% endif %}
      {% endif %}
      {% endfor %}
      {% if paginate.next %}
      <li class="next"><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}"><span aria-hidden="true"><i class="zmdi zmdi-chevron-left"></i></span></a></li>
      {% else %}
      <li class="disabled next">
        <a href="">
          <span><i class="zmdi zmdi-chevron-left"></i></span>
        </a>
      </li>
      {% endif %}
    </ul>
    {% else %}
    <ul class="">
      {% if paginate.previous %}
      <li>
        <a href="{{ paginate.previous.url }}" aria-label="Previous">
          <span aria-hidden="true"><i class="zmdi zmdi-chevron-left"></i></span>
        </a>
      </li>
      {% else %}
      <li class="disabled prev">
        <a href="">
          <span><i class="zmdi zmdi-chevron-left"></i></span>
        </a>
      </li>
      {% endif %}
      {% for part in paginate.parts %}
      {% if part.is_link %}
      <li>
        <a href="{{ part.url }}" title="">{{ part.title }}</a>
      </li>
      {% else %}
      {% if part.title == paginate.current_page %}
      <li class="active"><a href="">{{ part.title }}</a></li>
      {% else %}
      <li><a href="">{{ part.title }}</a></li>
      {% endif %}
      {% endif %}
      {% endfor %}
      {% if paginate.next %}
      <li class="next"><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}"><span aria-hidden="true"><i class="zmdi zmdi-chevron-right"></i></span></a></li>
      {% else %}
      <li class="disabled next">
        <a href="">
          <span><i class="zmdi zmdi-chevron-right"></i></span>
        </a>
      </li>
      {% endif %}
    </ul>
    {% endif %}
  </nav>
</div>
{% endif %}