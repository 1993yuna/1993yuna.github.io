{% include 'sidebar-mobile-header' %}
<div class="sidebar--content hidden-xs hidden-sm">
  <div class="sidebar--top">
    <!-- Start Site Logo  -->
    <div class="sidebar--logo">
      {% if section.settings.logo %}
      <a href="/"><img src="{{ section.settings.logo | img_url: 'medium' }}" alt="logo"></a>
      {% else %}
      <a href="/">{{ shop.name }}</a>
      {% endif %}
    </div>
    <!-- End Site Logo  -->
    <!-- Start Sidebar Navigation  -->
    <div class="sidebar--nav">
      <nav class="mainmenu__nav onepage--menu menu__style--7">
        <ul class="main__menu">
          {% for link in linklists.main-menu.links %}
          {% assign childlink_handle = link.title | handle %}
          {% if linklists[childlink_handle] and linklists[childlink_handle].links.size > 0 %}
          <li class="{% if link.active %}current{% endif %} drop"><a href="{{ link.url }}">{{ link.title }}</a>
            <ul class="dropdown">
              {% for childlink in linklists[childlink_handle].links %}
              <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
              {% endfor %}
            </ul>
          </li>
          {% else %}
          <li class="{% if link.active %}current{% endif %}"><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endif %}
          {% endfor %}
        </ul>
      </nav>
    </div>
    <!-- End Sidebar Navigation  -->
    <!-- Start Tools  -->
    <div class="sidebar--tools">
      <ul class="menu-extra">
        <li class="search search__open"><span class="ti-search"></span></li>
        {% if customer and shop.customer_accounts_enabled %}
        <li><a href="/account/logout" title="Log Out"><span class="ti-user"></span></a></li>
        {% elsif template != 'customers/login' %}
        <li class="user__menu"><span class="ti-user"></span></li>
        {% else %}
        <li><span class="ti-user"></span></li>
        {% endif %}
        <li class="cart__menu">
          <span class="ti-shopping-cart"></span>
          <span class="cart-badge bigcounter">{{ cart.item_count }}</span>
        </li>
        {% if section.settings.offset_menu_icon_enable %}
        <li class="toggle__menu"><span class="ti-menu"></span></li>
        {% endif %}
      </ul>
    </div>
    <!-- End Tools  -->
    <div class="newsletter__form">
      <div class="input__box">
        <div id="mc_embed_signup">
          <form action="{{ settings.newsletter_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll" class="htc__news__inner">
              <div class="news__input">
                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="{{ settings.email_placeholder }}" required>
              </div>
              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
              <div class="clearfix subscribe__btn"><input type="submit" value="Send" name="subscribe" id="mc-embedded-subscribe" class="bst__btn btn--white__color">
              </div>
            </div>
          </form>
        </div>
      </div>        
    </div>
  </div>
  <!-- Start Sidebar Footer -->
  {% if section.settings.sidebar_social_midea_enble %}
  <div class="sidebar--footer">
    <!-- Start Social Network -->
    <div class="sidebar--social__network">
      <div class="sidebar__ft__widget">
        <h2 class="ft__title">{{ section.settings.social_fild_title }}</h2>
        <ul class="social__icon">
          {% include 'social-link' %}
        </ul>
      </div>
    </div>
    <!-- End Social Network -->
  </div>
  {% endif %}
  <!-- End Sidebar Footer -->
</div>