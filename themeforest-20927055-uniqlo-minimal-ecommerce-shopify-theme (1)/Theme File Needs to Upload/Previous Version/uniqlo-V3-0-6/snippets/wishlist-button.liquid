{% if customer %}
<a class="action--wishlist tile-actions--btn flex wishlist-btn wishlist" href="/wishlist" data-product-handle="{{ product.handle }}">
  <span data-toggle="tooltip" title="Add Wishlist" class="ti-heart"></span>
  <span data-toggle="tooltip" title="Remove Wishlist" class="ti-heart-broken"></span>
</a>
{% if template contains 'product' %}
<a class="go-to-wishlist" href="/pages/wishlist">go to wishlist</a>
{% endif %}
{% else %}
<a class="wishlist" href="/account/login">
  <span data-toggle="tooltip" title="Add Wishlist" class="ti-heart"></span>
</a>
{% endif %}